{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@img/*": ["assets/img/*"],
      "dev/*": ["dev/*"],


      "@components/*": ["components/*"],
      "@WelcomeSection/*": ["components/WelcomeSection/*"],
      "@interfaces/*": ["interfaces/*"]
    },
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
